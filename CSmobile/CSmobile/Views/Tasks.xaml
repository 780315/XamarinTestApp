                <telerikDataControls:RadListView x:Name="listShowAll" IsVisible="False">
                    <telerikDataControls:RadListView.ItemTemplate>
                        <DataTemplate>
                            <telerikListView:ListViewTemplateCell>
                                <telerikListView:ListViewTemplateCell.View>
                                    <StackLayout Orientation="Vertical" Margin="10,10,10,0" HorizontalOptions="Fill" VerticalOptions="Fill">
                                        <Label FontSize="15" HorizontalOptions="CenterAndExpand" Text="{Binding title, StringFormat='Ticket: {0}'}"/>
                                        <Label FontSize="13" Text="{Binding id, StringFormat='Task Id: {0}'}"/>
                                        <Label FontSize="13" Text="{Binding title, StringFormat='Title: {0}'}"/>
                                        <Label FontSize="13" Text="{Binding description, StringFormat='Description: {0}'}"/>
                                        <Label FontSize="13" Text="{Binding deadline, StringFormat='Deadline: {0}'}"/>
                                        <Label FontSize="13" Text="{Binding deadlineType, StringFormat='Deadline type: {0}'}"/>
                                        <Label FontSize="13" Text="{Binding assignedUserId, StringFormat='Assigned User: {0}'}"/>
                                        <Label FontSize="13" Text="{Binding clientId, StringFormat='Client Id: {0}'}"/>
                                        <Label FontSize="13" Text="{Binding contactPersonName, StringFormat='Contact Name: {0}'}"/>
                                        <Label FontSize="13" Text="{Binding changedOn, StringFormat='Changed On: {0}'}"/>
                                        <Label FontSize="13" Text="{Binding customProperties, StringFormat='Custom Properties: {0}'}"/>
