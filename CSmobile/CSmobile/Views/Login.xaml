<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSmobile.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Label Text="Username" 
                   VerticalOptions="CenterAndExpand"  />
            <Entry x:Name="Entry_username" 
                   Placeholder="username" />
            <!--change position, below label-->
            <Label Text="Password"
                   VerticalOptions="CenterAndExpand" />
            <Entry x:Name="Entry_password" 
                   Placeholder="password" IsPassword="true" />
            <!--change position, below label-->
            <Button x:Name="Btn_SignIn" 
                    Text="Login"  VerticalOptions="CenterAndExpand"  
                    Clicked="SignInProcedure" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>